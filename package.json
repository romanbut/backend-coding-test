{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "mocha tests",
    "start": "node index.js",
    "eslint": "eslint . --ext .js,.ts",
    "markdownlint": "markdownlint docs/",
    "coverage": "nyc --check-coverage npm run test",
    "test:load": "forever start index.js && sleep 2s && artillery run ./tests/artillery.yml -o logs/artillery.report.json && forever stop index.js"
  },
  "keywords": [
    "Xendit"
  ],
  "prepush": {
    "tasks": [
      "test",
      "eslint",
      "coverage"
    ],
    "onDirtyState": "ask",
    "coloredOutpur": true
  },
  "author": "R.But",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "lodash": "^4.17.21",
    "sqlite3": "^4.2.0",
    "typescript": "^4.4.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.3",
    "markdownlint-cli": "^0.30.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prepush": "^3.1.11",
    "supertest": "^4.0.2"
  }
}
